{
    "name": "farsi/inertia-content",
    "description": "Nuxt Content-compatible content engine for Laravel + Inertia",
    "keywords": [
        "laravel",
        "inertia",
        "content",
        "markdown",
        "nuxt-content"
    ],
    "homepage": "https://github.com/farsidev/inertia-content",
    "license": "MIT",
    "authors": [
        {
            "name": "Farsi Dev",
            "email": "dev@farsi.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0",
        "inertiajs/inertia-laravel": "^1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Farsi\\InertiaContent\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Farsi\\InertiaContent\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "post-install-cmd": [
            "@php -r \"file_exists('resources/js/node_modules') || mkdir('resources/js/node_modules', 0755, true);\"",
            "@php -r \"echo 'Run: cd vendor/farsi/inertia-content && npm install (if developing)\\n';\""
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Farsi\\InertiaContent\\InertiaContentServiceProvider"
            ],
            "aliases": {
                "Content": "Farsi\\InertiaContent\\Facades\\Content"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
