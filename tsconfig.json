{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./resources/js",
    "jsx": "preserve",
    "types": ["vite/client", "node"]
  },
  "include": [
    "resources/js/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vendor"
  ]
}
